@using Spotify.Application.Streaming.Dto;
@model IEnumerable<MusicaDto>
@if (ViewBag.LoginError != null)
{
    <p style="color: red;">@ViewBag.LoginError</p>
    <div style="display:block; position:absolute; height:100%; width:100%;"></div>

}
<div>
    <a type="button" class="btn btn-info mb-2 me-2 text-light border-light fw-bold" role="button" asp-controller="Musica" asp-action="Create">
        <i class="bi bi-plus-circle"> Adicionar Registro</i>
    </a>
</div>
<div class="text-center border border-2 border-dark rounded-2">
    <table class="table table-striped table-fixed table-dark mb-0">
        <thead>
            <tr>
                <th scope="col" class="text-start">
                    Nome
                </th>
                <th scope="col" class="text-start">
                    Url
                </th>
                <th scope="col" class="text-start">
                    Duração
                </th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody style="max-height: max-content; overflow-y: auto;">
            @foreach (var item in Model)
            {
                <tr>
                    <td class="w-auto text-start text-nowrap">@item.Nome</td>
                    <td class="w-75 text-start text-wrap">@item.Url</td>
                    <td class="w-auto text-start">@item.Duracao</td>
                    <td class="w-25 text-center">
                        <a type="button" class="btn btn-outline-warning rounded-circle p-2 border border-2 border-secondary" data-toggle="tooltip" data-placement="bottom" title="Editar usuário" href="@Url.Action("Edit", "Musica", new { Id = item.Id })">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a type="button" class="btn btn-outline-danger rounded-circle p-2 border border-2 border-secondary" data-toggle="tooltip" data-placement="bottom" title="Excluir usuário" href="@Url.Action("Delete", "Musica",  item )">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@using Spotify.Application.Admin.Dto
@model ContaAdminDto
<button type="button" class="btn btn-primary mb-2" role="button" onclick="backHistory()">
    <i class="bi bi-arrow-return-left">Voltar</i>
</button>
<div class="d-flex flex-column align-items-stretch m-0 p-2 border border-2 border-dark bg-dark-subtle align-items-center justify-content-center text-light">
    <form method="post" asp-controller="Usuario" asp-action="Save">
        <div class="row mb-3">
            <label for="name" class="col-1 col-form-label fs-5 text-end">Nome</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(account => account.Nome, new { @class = "form-control", @id = "name", @required = "" })
                <span class="badge bg-secondary bg-opacity-50 text-danger" asp-validation-for="Nome"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label for="email" class="col-1 col-form-label fs-5 text-end">Email</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(account => account.Email, new { @class = "form-control ", @id = "email", @required = "" })
                <span class="badge bg-secondary bg-opacity-50 text-danger" asp-validation-for="Email"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label for="password" class="col-1 col-form-label fs-5 text-end">Senha</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(account => account.Senha, new { @class = "form-control", @id = "password", @type = "password", @autocomplete = "new-password", @required = "" })
                <span class="badge bg-secondary bg-opacity-50 text-danger" asp-validation-for="Senha"></span>
            </div>
        </div>
        <fieldset class="row mb-3">
            <legend class="col-form-label col-1 pt-0 fs-5 text-end">Perfil</legend>
            <div class="col-sm-10">
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="perilAdmin" asp-for="PerfilType" value="@PerfilDto.Admin" checked />
                    <label class="form-check-label" for="perilAdmin">
                        Acesso Total
                    </label>
                </div>
                <div class="form-check disabled">
                    <input class="form-check-input" type="radio" id="perilNormal" asp-for="PerfilType" value="@PerfilDto.Normal" />
                    <label class="form-check-label" for="perilNormal">
                        Normal
                    </label>
                </div>
            </div>
        </fieldset>
        <div class="row mb-3  d-flex align-items-center justify-content-center ">
            <button type="submit" class="btn btn-primary w-25 fs-4">
                <i class="bi bi-save">Salvar</i>
            </button>
        </div>
    </form>
</div>